root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
insert_final_newline = true
max_line_length = off

[*.{yml,json}]
indent_size = 2

# IntelliJ
ij_visual_guides = 160

ij_java_block_brace_style = next_line
ij_java_class_brace_style = next_line
ij_java_lambda_brace_style = next_line
ij_java_method_brace_style = next_line
ij_java_catch_on_new_line = true
ij_java_else_on_new_line = true
ij_java_finally_on_new_line = true
ij_java_while_on_new_line = true
ij_java_call_parameters_new_line_after_left_paren = true
ij_java_call_parameters_right_paren_on_new_line = true
ij_java_parentheses_expression_new_line_after_left_paren = true
ij_java_parentheses_expression_right_paren_on_new_line = true
